<extension type="plugin" group="radicalmart_fields" method="upgrade">
	<name>PLG_RADICALMART_FIELDS_SUBFORM</name>
	<creationDate>January 2026</creationDate>
    <author>Dmitriy Vasyukov</author>
    <copyright>Copyright (C) 2005 - 2025 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>info@fictionlabs.ru</authorEmail>
    <authorUrl>https://fictionlabs.ru</authorUrl>
    <version>1.2.1-dev</version>
    <description>PLG_RADICALMART_FIELDS_SUBFORM_DESCRIPTION</description>
	<namespace path="src">Joomla\Plugin\RadicalMartFields\Subform</namespace>
	<scriptfile>script.php</scriptfile>

	<!-- Plugin languages -->
	<languages folder="language">
		<language tag="en-GB">en-GB/plg_radicalmart_fields_subform.ini</language>
		<language tag="en-GB">en-GB/plg_radicalmart_fields_subform.sys.ini</language>
		<language tag="ru-RU">ru-RU/plg_radicalmart_fields_subform.ini</language>
		<language tag="ru-RU">ru-RU/plg_radicalmart_fields_subform.sys.ini</language>
	</languages>

	<!-- Plugin files -->
	<files>
		<folder plugin="subform">src</folder>
		<folder>forms</folder>
		<folder>services</folder>
	</files>

	<!-- Plugin layouts -->
	<layouts destination="plugins/radicalmart_fields/subform" folder="layouts">
		<folder>display</folder>
	</layouts>

	<!-- Update server -->
    <updateservers>
        <server type="extension" priority="1" name="RadicalMart Fields: Subform">
            https://sovmart.ru/update?element=plg_radicalmart_fields_subform
        </server>
    </updateservers>
</extension>